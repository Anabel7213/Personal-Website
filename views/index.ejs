<div class="container latest-posts section d-flex justify-content-center pt-5">
  <div class="row">
    <div class="col">
      <h2>Latest Posts</h2>

      <!-- Responsible for dynamically generating an article's preview -->
      <% latestPosts.forEach(function(post) { %>
      <div class="single-preview mt-5 mb-5">
        <h6><%= post.date %></h6>
        <a href="/posts/<%= post.title %>">
          <h3 class="mt-4"><%= post.title %></h3>
        </a>
        <div class="tags-container d-flex flex-wrap mt-4 mb-5 gap-4">
          <% var tagsArray = post.tags.split(","); %>
          <% tagsArray.forEach(function(tag) { %>
          <% var colors = ["yellow", "green", "blue", "red", "pink"]; %>
          <% var randomColor = colors[Math.floor(Math.random() * colors.length)]; %>
          <h6 class="<%= randomColor %>"><%= tag.trim() %></h6>
          <% }) %>
        </div>
      </div>
      <% }) %>
      <!-- End of dynamically generated article's preview -->

      <div class="d-flex align-items-center">
        <h4><a href="/blog">All posts</a><i class="fa-solid fa-arrow-right fa-beat mx-3" style="color: #37393d;"></i></h4>
      </div>
    </div>
  </div>
